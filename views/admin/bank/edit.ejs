<%- include ../../partials/header.ejs %> 
<%- include ../../partials/navbar.ejs %> 
<%- include ../../partials/sidebar.ejs %> 
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Bank</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-dark">
                  <div class="card-header">
                    <h3 class="card-title">Form Edit Bank </h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="post">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control" id="name"
                        value="<%= bank.name %>" placeholder="Input your name" required> 
                      </div>
                      <div class="form-group">
                        <label for="name">Bank Name</label>
                        <select class="form-control select2" style="width: 100%;" name="nameBank">
                            <option selected="selected"><%= bank.nameBank %></option>
                            <option>BCA</option>
                            <option>BNI</option>
                            <option>BRI</option>
                            <option>MANDIRI</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="noRekening">Account Number</label>
                        <input type="text" name="noRekening" class="form-control" id="noRekening"
                        value="<%= bank.noRekening %>" placeholder="Input your account number" required> 
                      </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                      <button type="submit" class="btn btn-dark">Save</button>
                    </div>
                  </form>
                </div>
                <!-- /.card -->
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
<%- include ../../partials/footer.ejs %> 
<%- include ../../partials/js.ejs %> 