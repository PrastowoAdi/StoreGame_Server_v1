<%- include ../../partials/header.ejs %> 
<%- include ../../partials/navbar.ejs %> 
<%- include ../../partials/sidebar.ejs %> 
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Voucher</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
              <li class="breadcrumb-item active">Add</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-dark">
                  <div class="card-header">
                    <h3 class="card-title">Form Add Voucher</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/voucher/create" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">Game Name</label>
                            <input type="text" name="name" class="form-control" id="name" placeholder="Input Your Game Name" required>
                        </div>
                        <div class="form-group">
                            <label>Category</label>
                            <select class="form-control select2" style="width: 100%;" name="coinName" required>
                                <option selected="selected">Choose Category</option>
                                <% category.forEach(category=>{ %>
                                    <option value="<%= category._id %>" ><%= category.name %> </option>
                                <% }) %> 
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Nominal</label>
                            <div class="select2-dark">
                                <select class="form-control select2" multiple="multiple" data-placeholder="Choose Nominal" style="width: 100%;" name="nominal" required>
                                    <% nominal.forEach(nominal=>{ %>
                                        <option value="<%= nominal._id %>" ><%= nominal.coinName %> - <%= nominal.price %> </option>
                                    <% }) %> 
                                </select>
                            </div>
                        </div>
      
                      <div class="form-group">
                        <label for="coinQuantity">Total Coin</label>
                        <input type="number" name="coinQuantity" class="form-control" id="coinQuantity" placeholder="Add Total Coin" required>
                      </div>
                      <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" name="price" class="form-control" id="price" placeholder="Add price" required>
                      </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                      <button type="submit" class="btn btn-dark">Save</button>
                    </div>
                  </form>
                </div>
                <!-- /.card -->
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
<%- include ../../partials/footer.ejs %> 
<%- include ../../partials/js.ejs %> 